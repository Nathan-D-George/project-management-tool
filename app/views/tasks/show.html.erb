<p>
  <small>
    <small>
      <%= @project.name %> >> <%= @milestone.name %> >> <%= @task.name %>
    </small>
  </small>
</p>

 <div style='margin-left:30px'>
  <p> <h3> <%= @task.name %> </h3> </p>
