<%= render 'page_topper' %>

 <div class="col-md-10" style='margin-left:30px'>
  <p> <h3> <%= @task.name %> </h3> </p>
  <div class='row', style='padding-bottom:20px; text-align:justify'>
    <div class='col-md-6' >
      <h4>Task:            <%= @task.name %> </h4>
      <p> Description:</p> <%= @task.description %>
    </div>
  </div>
  <% if @project.leader == current_user.id %>
    <%= link_to "Edit Task", edit_task_path(id: @task.id), class:'btn show_button'%>
  <% end %>
  <hr>
  <div class='row' style='margin-left:0px'>
    Sub-Tasks List
    <%= render 'sub_tasks_list' %>
  </div>
  <% if @project.leader == current_user.id || @task.assigned_to == current_user.id %>
    <%= link_to "New Sub-Task", new_sub_task_path(id: @task.id), class:'btn mt-4 mb-4 show_button' %>
  <% end %>
</div> 
